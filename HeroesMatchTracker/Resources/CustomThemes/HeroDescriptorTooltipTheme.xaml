<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">

    <Color x:Key="HeroDescriptorTooltipTitleFontColor">#E5F1FF</Color>
    <Color x:Key="HeroDescriptorTooltipTitleFontColor2">#7E97E7</Color>

    <SolidColorBrush x:Key="HeroDescriptorTooltipTitleFontBrush" Color="{StaticResource HeroDescriptorTooltipTitleFontColor}" options:Freeze="True" />
    <SolidColorBrush x:Key="HeroDescriptorTooltipSubFontBrush" Color="{StaticResource HeroDescriptorTooltipTitleFontColor2}" options:Freeze="True" />
</ResourceDictionary>