        <Grid Grid.Column="1" ColumnDefinitions="Auto, *">
            <StackPanel Grid.Column="1">
                <StackPanel Orientation="Horizontal">
                    <Button Content="(RE)SCAN" Command="{Binding Scan}"/>
                    <Button Content="START" Command="{Binding Start}"/>
                    <Button Content="SELECT FILES"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <CheckBox Content="Watch"
                              ToolTip.Tip="Watches the selected Replay's Location for new files"/>
                    <CheckBox Content="Auto Scan on Start"
                              ToolTip.Tip="Executes Scan on Start"/>
                    <CheckBox Content="Auto Start on Startup"
                              ToolTip.Tip="Executes Start on application startup"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBox Text="{Binding ReplaysLocation}" Width="520" Watermark="Replays Location" IsReadOnly="True"/>
