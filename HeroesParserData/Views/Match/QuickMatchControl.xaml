<UserControl x:Class="HeroesParserData.Views.Match.QuickMatchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeroesParserData.Views.Match"
             xmlns:ViewModels="clr-namespace:HeroesParserData.ViewModels.Match"
             mc:Ignorable="d" 
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             d:DataContext="{d:DesignInstance ViewModels:QuickMatchViewModel}" d:DesignWidth="1436" d:DesignHeight="528">
    <UserControl.DataContext>
        <ViewModels:QuickMatchViewModel />
    </UserControl.DataContext>
    <!--<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="1024"></ColumnDefinition>
                <ColumnDefinition MinWidth="545"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <local:MatchSummaryControl Grid.Column="0"></local:MatchSummaryControl>
            <local:MatchListControl Grid.Column="1" Margin="5,2,-5,-2"></local:MatchListControl>
        </Grid>
    <!--</ScrollViewer>-->
</UserControl>
