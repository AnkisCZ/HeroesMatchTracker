                                    <DataGridTextColumn Header="- Kills" Binding="{Binding SoloKills}" HeaderStyle="{StaticResource MatchAdvDataGridColumnHeader}"/>
                                    <DataGridTextColumn Header="- TakeDowns" Binding="{Binding TakeDowns}" HeaderStyle="{StaticResource MatchAdvDataGridColumnHeader}"/>
                                    <DataGridTextColumn Header="- Assists" Binding="{Binding Assists}" HeaderStyle="{StaticResource MatchAdvDataGridColumnHeader}"/>
                                    <DataGridTextColumn Header="- Deaths" Binding="{Binding Deaths}" HeaderStyle="{StaticResource MatchAdvDataGridColumnHeader}"/>
                                    <DataGridTextColumn Header="Siege" HeaderStyle="{StaticResource MatchAdvThickDataGridColumnHeader}" CellStyle="{StaticResource MatchAdvThickDataGridCell}"/>
                                    <DataGridTextColumn Header="- Total Siege Damage" Binding="{Binding SiegeDamage, Converter={StaticResource IntToStringThousandSeperatorConverter}}" HeaderStyle="{StaticResource MatchAdvDataGridColumnHeader}"/>
                                    <DataGridTextColumn Header="- Minion Damage" Binding="{Binding MinionDamage, Converter={StaticResource IntToStringThousandSeperatorConverter}}" HeaderStyle="{StaticResource MatchAdvDataGridColumnHeader}"/>
                                    <DataGridTextColumn Header="- Summon Damage" Binding="{Binding SummonDamage, Converter={StaticResource IntToStringThousandSeperatorConverter}}" HeaderStyle="{StaticResource MatchAdvDataGridColumnHeader}"/>
                                    <DataGridTextColumn Header="- Structure Damage" Binding="{Binding StrutureDamage, Converter={StaticResource IntToStringThousandSeperatorConverter}}" HeaderStyle="{StaticResource MatchAdvDataGridColumnHeader}"/>
                                    <DataGridTextColumn Header="Hero" HeaderStyle="{StaticResource MatchAdvThickDataGridColumnHeader}" CellStyle="{StaticResource MatchAdvThickDataGridCell}"/>
                                    <DataGridTextColumn Header="- Hero Damage" Binding="{Binding HeroDamage, Converter={StaticResource IntToStringThousandSeperatorConverter}}" HeaderStyle="{StaticResource MatchAdvDataGridColumnHeader}"/>
                                    <DataGridTextColumn Header="- Damage Taken" Binding="{Binding DamageTaken, Converter={StaticResource IntToStringThousandSeperatorConverter}}" HeaderStyle="{StaticResource MatchAdvDataGridColumnHeader}"/>
                                    <DataGridTextColumn Header="- Healing" Binding="{Binding Healing, Converter={StaticResource IntToStringThousandSeperatorConverter}}" HeaderStyle="{StaticResource MatchAdvDataGridColumnHeader}"/>
                                    <DataGridTextColumn Header="- Self Healing" Binding="{Binding SelfHealing, Converter={StaticResource IntToStringThousandSeperatorConverter}}" HeaderStyle="{StaticResource MatchAdvDataGridColumnHeader}"/>
                                    <DataGridTextColumn Header="- Time Spent Dead" Binding="{Binding TimeSpentDead}" HeaderStyle="{StaticResource MatchAdvDataGridColumnHeader}"/>
                                    <DataGridTextColumn Header="- Experience" Binding="{Binding ExperienceContribution, Converter={StaticResource IntToStringThousandSeperatorConverter}}" HeaderStyle="{StaticResource MatchAdvDataGridColumnHeader}"/>
                                    <DataGridTextColumn Header="Other" HeaderStyle="{StaticResource MatchAdvThickDataGridColumnHeader}" CellStyle="{StaticResource MatchAdvThickDataGridCell}"/>
                                    <DataGridTextColumn Header="- Creep Damage" Binding="{Binding CreepDamage, Converter={StaticResource IntToStringThousandSeperatorConverter}}" HeaderStyle="{StaticResource MatchAdvDataGridColumnHeader}"/>
                                    <DataGridTextColumn Header="- Merc Camp Captures" Binding="{Binding MercCampCaptures}" HeaderStyle="{StaticResource MatchAdvDataGridColumnHeader}"/>
                                    <DataGridTextColumn Header="- WatchTower Captures" Binding="{Binding WatchTowerCaptures}" HeaderStyle="{StaticResource MatchAdvDataGridColumnHeader}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="Observers" Visibility="{Binding HasObservers, Converter={StaticResource BooleanToVisibility}}" Style="{StaticResource CustomMetroTabItem}">
                <StackPanel HorizontalAlignment="Left">
                    <DataGrid Style="{StaticResource DefaultDataGrid}" GridLinesVisibility="Vertical" BorderThickness="1" CanUserSortColumns="False" AlternationCount="2"  
                                      RowStyle="{StaticResource SummaryDataGridRow}" ItemsSource="{Binding MatchObserversCollection}" SelectedItem="{Binding SelectedDataPlayer}">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Hero" Width="134">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Image Source="{Binding LeaderboardPortrait}" Height="44" Width="79">
                                                <Image.ToolTip>
                                                    <ToolTip Content="{Binding CharacterName}"></ToolTip>
                                                </Image.ToolTip>
                                            </Image>
                                            <Image Source="{StaticResource Silence}" Height="25" Width="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-4,-4,0" Visibility="{Binding PlayerSilenced, Converter={StaticResource BooleanToVisibility}}"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <SolidColorBrush Color="{Binding TalentsPortraitBackColor}" />
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DataGridTemplateColumn.CellStyle>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Player" MinWidth="110">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding PlayerName}" ContextMenu="{StaticResource PlayerSearchContextMenu}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Hero Level" Binding="{Binding CharacterLevel}" Width="110"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>
            <TabItem Header="Team Bans" Visibility="{Binding HasBans, Converter={StaticResource BooleanToVisibility}}" Style="{StaticResource CustomMetroTabItem}">
                <Grid Background="AliceBlue" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"></ColumnDefinition>
                        <ColumnDefinition Width="150"></ColumnDefinition>
                        <ColumnDefinition Width="150"></ColumnDefinition>
                        <ColumnDefinition Width="150"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label Content=" Team 1 " HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" FontSize="20"/>
                    <Label Content="{Binding MatchHeroBans.Team0Ban0HeroName}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="0" Grid.Row="0" FontSize="18"/>
                    <Label Content="{Binding MatchHeroBans.Team0Ban1HeroName}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="0" FontSize="18"/>
                    <Label Content=" Team 2 " HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="0" FontSize="20"/>
                    <Label Content="{Binding MatchHeroBans.Team1Ban0HeroName}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="2" Grid.Row="0" FontSize="18"/>
                    <Label Content="{Binding MatchHeroBans.Team1Ban1HeroName}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="3" Grid.Row="0" FontSize="18"/>

                    <Image Source="{Binding MatchHeroBans.Team0Ban0}" Height="120" Width="102" Grid.Column="0" Grid.Row="1"/>
                    <Image Source="{Binding MatchHeroBans.Team0Ban1}" Height="120" Width="102" Grid.Column="1" Grid.Row="1"/>
                    <Image Source="{Binding MatchHeroBans.Team1Ban0}" Height="120" Width="102" Grid.Column="2" Grid.Row="1"/>
                    <Image Source="{Binding MatchHeroBans.Team1Ban1}" Height="120" Width="102" Grid.Column="3" Grid.Row="1"/>
                </Grid>
            </TabItem>
            <TabItem Header="Team Chat" Visibility="{Binding HasChat, Converter={StaticResource BooleanToVisibility}}" Style="{StaticResource CustomMetroTabItem}">
                <DataGrid Style="{StaticResource DefaultDataGrid}"  GridLinesVisibility="Vertical"  BorderThickness="1" AlternationCount="2" RowStyle="{StaticResource DefaultDataGridRow}" CanUserSortColumns="False" VerticalAlignment="Top"
                          ItemsSource="{Binding MatchChatMessagesCollection}" MaxHeight="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=ActualHeight, Converter={StaticResource ResizeTeamChatWindowHeightConverter}}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Time" Binding="{Binding TimeStamp}" HeaderStyle="{StaticResource DataGridCenterHeader}" MinWidth="90" CellStyle="{StaticResource DataGridCenterCell}" />
                        <DataGridTextColumn Header="Target" Binding="{Binding Target}" MinWidth="90" />
                        <DataGridTextColumn Header="Message" Binding="{Binding ChatMessage}" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Graphs" Style="{StaticResource CustomMetroTabItem}">
                <TabControl Controls:TabControlHelper.IsUnderlined="True">
                    <TabItem Header="Team Levels" Style="{StaticResource CustomInner1MetroTabItem}">
                        <Grid Background="{StaticResource GraphGridBackgroundBrush}" VerticalAlignment="Stretch" MaxHeight="{StaticResource MaxGraphHeight}" MaxWidth="{StaticResource MaxGraphWidth}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="60"></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Team Levels Over Time" FontSize="38" FontWeight="Medium" Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Center"/>
                            <lvc:CartesianChart Series="{Binding MatchSummaryGraphs.MatchTeamLevelsLineChartCollection}" LegendLocation="Right" Grid.Row="1">
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis Title="Team Level">
                                        <lvc:Axis.Sections>
                                            <lvc:AxisSection Value="1" StrokeThickness="1" Stroke="LightBlue"/>
                                            <lvc:AxisSection Value="4" StrokeThickness="1" Stroke="LightBlue"/>
                                            <lvc:AxisSection Value="7" StrokeThickness="1" Stroke="LightBlue"/>
                                            <lvc:AxisSection Value="10" StrokeThickness="2" Stroke="Green"/>
                                            <lvc:AxisSection Value="13" StrokeThickness="1" Stroke="LightBlue"/>
                                            <lvc:AxisSection Value="16" StrokeThickness="1" Stroke="LightBlue"/>
                                            <lvc:AxisSection Value="20" StrokeThickness="2" Stroke="Green"/>
                                        </lvc:Axis.Sections>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisY>
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis Title="Time" MinValue="0" LabelFormatter="{Binding MatchSummaryGraphs.MatchTeamLevelsFormatter}"/>
                                </lvc:CartesianChart.AxisX>
                            </lvc:CartesianChart>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Team Experience" Style="{StaticResource CustomInner1MetroTabItem}" MaxWidth="{StaticResource MaxGraphWidth}">
                        <TabControl Controls:TabControlHelper.IsUnderlined="True">
                            <TabItem Header="Over Time" Style="{StaticResource CustomInner2MetroTabItem}">
                                <Grid Background="{StaticResource GraphGridBackgroundBrush}" VerticalAlignment="Stretch" MaxHeight="{StaticResource MaxGraphHeight}" MaxWidth="{StaticResource MaxGraphWidth}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition Width="40"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="60"></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="{Binding MatchSummaryGraphs.GraphTeam0Title}" FontSize="34" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding MatchSummaryGraphs.GraphTeam1Title}" FontSize="34" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Experience Over Time" FontSize="38" FontWeight="Medium" Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Center"/>
                                    <lvc:CartesianChart Series="{Binding MatchSummaryGraphs.MatchTeam0ExperienceStackedGraphCollection}" LegendLocation="Right" Grid.Column="0" Grid.Row="1">
                                        <lvc:CartesianChart.AxisY>
                                            <lvc:Axis Title="Experience" MaxValue="{Binding MatchSummaryGraphs.MatchTeamExperienceMaxYValue}"/>
                                        </lvc:CartesianChart.AxisY>
                                        <lvc:CartesianChart.AxisX>
                                            <lvc:Axis Title="Time" LabelFormatter="{Binding MatchSummaryGraphs.MatchTeamExperienceFormatter}"/>
                                        </lvc:CartesianChart.AxisX>
                                    </lvc:CartesianChart>
                                    <lvc:CartesianChart Series="{Binding MatchSummaryGraphs.MatchTeam1ExperienceStackedGraphCollection}" LegendLocation="Right" Grid.Column="2" Grid.Row="1">
                                        <lvc:CartesianChart.AxisY>
                                            <lvc:Axis Title="Experience" MaxValue="{Binding MatchSummaryGraphs.MatchTeamExperienceMaxYValue}"/>
                                        </lvc:CartesianChart.AxisY>
                                        <lvc:CartesianChart.AxisX>
                                            <lvc:Axis Title="Time" LabelFormatter="{Binding MatchSummaryGraphs.MatchTeamExperienceFormatter}"/>
                                        </lvc:CartesianChart.AxisX>
                                    </lvc:CartesianChart>
                                </Grid>
                            </TabItem>
                            <TabItem Header="Final Exp Breakdown" Style="{StaticResource CustomInner2MetroTabItem}">
                                <Grid>
                                    <Controls:ToggleSwitch Header="Show as Row Chart" OnLabel="Yes" OffLabel="No" IsChecked="{Binding MatchSummaryGraphs.ToggleSwitchRowOrPie}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" Panel.ZIndex="999"/>
                                    <Grid Background="{StaticResource GraphGridBackgroundBrush}" VerticalAlignment="Stretch" MaxHeight="{StaticResource MaxGraphHeight}" MaxWidth="{StaticResource MaxGraphWidth}" Visibility="{Binding MatchSummaryGraphs.IsTeamExperiencePieChartVisible, Converter={StaticResource BooleanToVisibility}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition Width="40"></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="60"></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="{Binding MatchSummaryGraphs.GraphTeam0Title}" FontSize="34" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding MatchSummaryGraphs.GraphTeam1Title}" FontSize="34" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Final Experience Breakdown" FontSize="38" FontWeight="Medium" Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Center"/>
                                        <lvc:PieChart LegendLocation="Bottom" Series="{Binding MatchSummaryGraphs.MatchTeam0ExperiencePieChartCollection}" Grid.Row="1" Grid.Column="0">
                                            <lvc:PieChart.ChartLegend>
                                                <lvc:DefaultLegend BulletSize="26"/>
                                            </lvc:PieChart.ChartLegend>
                                        </lvc:PieChart>
                                        <lvc:PieChart LegendLocation="Bottom" Series="{Binding MatchSummaryGraphs.MatchTeam1ExperiencePieChartCollection}" Grid.Row="1" Grid.Column="2">
                                            <lvc:PieChart.ChartLegend>
                                                <lvc:DefaultLegend BulletSize="26"/>
                                            </lvc:PieChart.ChartLegend>
                                        </lvc:PieChart>
                                    </Grid>
                                    <Grid Background="{StaticResource GraphGridBackgroundBrush}" VerticalAlignment="Stretch" MaxHeight="{StaticResource MaxGraphHeight}" MaxWidth="{StaticResource MaxGraphWidth}" Visibility="{Binding MatchSummaryGraphs.IsTeamExperienceRowChartVisible, Converter={StaticResource BooleanToVisibility}}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="60"></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="Final Experience Breakdown" FontSize="38" FontWeight="Medium" Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Center"/>
                                        <lvc:CartesianChart Series="{Binding MatchSummaryGraphs.MatchTeamExperienceRowChartCollection}" LegendLocation="Left" Grid.Row="1">
                                            <lvc:CartesianChart.AxisY>
                                                <lvc:Axis Title="Experience Types" Labels="{Binding MatchSummaryGraphs.ExperienceTypesLabels}" />
                                            </lvc:CartesianChart.AxisY>
                                            <lvc:CartesianChart.AxisX>
                                                <lvc:Axis Title="Points"/>
                                            </lvc:CartesianChart.AxisX>
                                        </lvc:CartesianChart>
                                    </Grid>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </TabItem>
                </TabControl>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
