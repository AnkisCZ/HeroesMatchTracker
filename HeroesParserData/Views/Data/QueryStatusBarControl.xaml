<UserControl x:Class="HeroesParserData.Views.Data.QueryStatusBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeroesParserData.Views.Data"
             mc:Ignorable="d" 
             HorizontalAlignment="Stretch"
             HorizontalContentAlignment="Stretch"
             VerticalAlignment="Stretch"
             VerticalContentAlignment="Stretch"
             Height="auto"
             Width="auto">
    <StatusBar DockPanel.Dock="Bottom">
        <StatusBarItem Content="{Binding QueryStatus}"/>
        <StatusBarItem Content="rows" Grid.Column="2" DockPanel.Dock="Right" />
        <StatusBarItem Content="{Binding RowsReturned}" DockPanel.Dock="Right" />
        <StatusBarItem />
    </StatusBar>
</UserControl>
