<UserControl x:Class="HeroesStatTracker.Views.RawData.QueryStatusBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeroesStatTracker.Views.RawData"
             mc:Ignorable="d" >
    <StatusBar DockPanel.Dock="Bottom">
        <StatusBarItem Content="{Binding QueryStatus}"/>
        <StatusBarItem Content="row(s) returned" DockPanel.Dock="Right" />
        <StatusBarItem Content="{Binding RowsReturned}" DockPanel.Dock="Right" />
        <StatusBarItem />
    </StatusBar>
</UserControl>
